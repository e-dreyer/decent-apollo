{
  "name": "decent-apollo",
  "version": "1.0.0",
  "description": "Apollo, Prisma and Postgres implementation of decent-web",
  "main": "index.js",
  "repository": "https://github.com/e-dreyer/decent-apollo.git",
  "author": "erik.dreyer@protonmail.com",
  "license": "CC0-1.0",
  "private": false,
  "scripts": {
    "build": "npm run build:nexus-typegen && tsc",
    "start": "ts-node-dev --no-notify --transpile-only --respawn src/index.ts",
    "migrate": "npx prisma db push",
    "build:nexus-typegen": "ts-node --transpile-only src/index"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@prisma/client": "4.0.0",
    "@types/node": "*",
    "apollo-server-express": "^2.19.1",
    "express": "^4.17.1",
    "graphql": "^15.8.0",
    "graphql-scalars": "^1.17.0",
    "nexus": "^1.3.0",
    "nodemon": "^2.0.19"
  },
  "devDependencies": {
    "prettier": "2.2.1",
    "prisma": "^4.0.0",
    "ts-node-dev": "^1.0.0-pre.30",
    "typescript": "^4.7.4"
  },
    "prisma": {
    "schema": "./src/prisma/schema.prisma"
  }
}
